{
  "name": "curated-context",
  "version": "0.1.0",
  "description": "Intelligent memory sidecar for Claude Code",
  "license": "AGPL-3.0-only",
  "type": "module",
  "main": "dist/daemon/index.js",
  "bin": {
    "curated-context": "./bin/curated-context.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/daemon/index.js",
    "setup": "npm install && claude plugin add $(pwd)",
    "test": "npm run build && vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run test/unit/",
    "test:integration": "vitest run test/integration/",
    "test:e2e": "RUN_E2E=1 vitest run test/e2e/"
  },
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
